{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build Mac",
            "type": "shell",
            "osx": {
                "command": "make mac",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "Build Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi",
                "'zsh",
                "-s'",
                "<",
                "build-pi.zsh"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}