{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "taskName": "Build g++",
        "type": "shell",
        "osx": {
            "command": "g++",
            "args": [
                "-Wall",
                "-D__MACOSX_CORE__",
                "-o",
                "./bin/audioprobe",
                "main.cpp",
                "../rtaudio/RtAudio.cpp",
                "-I../rtaudio",
                "-framework",
                "CoreAudio",
                "-framework",
                "CoreFoundation",
                "-lpthread"
            ]
        },
        "linux": {
            "command": "g++",
            "args": [
                "-Wall",
                "-D__LINUX_ALSA__",
                "-o",
                "./bin/audioprobe",
                "main.cpp",
                "../rtaudio/RtAudio.cpp",
                "-I../rtaudio",
                "-framework",
                "CoreAudio",
                "-framework",
                "CoreFoundation",
                "-lpthread"
            ]
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}